@model IReadOnlyList<StudentsViewModels>
@{
    ViewData["Title"] = "Students";
}

<div class="card shadow-sm border-0">
    <div class="card-header d-flex justify-content-between align-items-center">
        <h5 class="mb-0 fw-semibold">Students</h5>
        <a asp-action="Create" class="btn btn-primary btn-sm">
            + Add Student
        </a>
    </div>

    <div class="table-responsive">
        <table class="table table-hover align-middle mb-0">
            <thead class="table-light">
            <tr>
                <th>#</th>
                <th>Name</th>
                <th>Roll</th>
                <th>Email</th>
                <th>Status</th>
                <th class="text-end">Actions</th>
            </tr>
            </thead>

            <tbody>
            @foreach (var s in Model)
            {
                <tr>
                    <td>@s.StudentID</td>
                    <td>
                        <strong>@s.FirstName @s.LastName</strong><br/>
                        <small class="text-muted">@s.Address</small>
                    </td>
                    <td>@s.RollNumber</td>
                    <td>@s.Email</td>
                    <td>
                        <span class="badge @(s.IsActive ? "bg-success" : "bg-secondary")">
                            @(s.IsActive ? "Active" : "Inactive")
                        </span>
                    </td>
                    <td class="text-end">
                        <a asp-action="Edit" asp-route-id="@s.StudentID"
                           class="btn btn-sm btn-outline-primary">
                            Edit
                        </a>

                        <a asp-action="Details" asp-route-id="@s.StudentID"
                           class="btn btn-sm btn-outline-secondary">
                            View
                        </a>

                        <a asp-action="Delete" asp-route-id="@s.StudentID"
                           class="btn btn-sm btn-outline-danger">
                            Delete
                        </a>
                    </td>
                </tr>
            }
            </tbody>
        </table>
    </div>
</div>