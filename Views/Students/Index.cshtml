@using WebApplication2.Data
@model IReadOnlyList<StudentsViewModels>

<table class="table table-striped table-bordered table-hover">
    <thead class="table-dark">
        <tr>
            <th>Student ID</th>
            <th>Roll Number</th>
            <th>First Name</th>
            <th>Last Name</th>
            <th>DOB</th>
            <th>Gender</th>
            <th>Email</th>
            <th>Phone</th>
            <th>Address</th>
            <th>Admission Date</th>
            <th>Is Active</th>
            <th>Created At</th>
            <th>Updated At</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var s in Model)
        {
            <tr>
                <td>@s.StudentID</td>
                <td>@s.RollNumber</td>
                <td>@s.FirstName</td>
                <td>@s.LastName</td>
                <td>@s.DOB?.ToString("yyyy-MM-dd")</td>
                <td>@s.Gender</td>
                <td>@s.Email</td>
                <td>@s.Phone</td>
                <td>@s.Address</td>
                <td>@s.AdmissionDate?.ToString("yyyy-MM-dd")</td>
                <td>
                 @s.IsActive
                </td>
                <td>@s.CreatedAt?.ToString("yyyy-MM-dd HH:mm")</td>
                <td>@s.UpdatedAt</td>
            </tr>
        }
    </tbody>
</table>

