@model ResultViewModel

@{
    ViewData["Title"] = "Create Result";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">

            <div class="card shadow-lg border-0 rounded-4">
                <div class="card-header bg-primary text-white rounded-top-4">
                    <h4 class="mb-0">Create Result</h4>
                </div>

                <div class="card-body p-4">

                    <form asp-action="Create" method="post">


                        <div class="mb-3">
                            <label asp-for="StudentID" class="form-label fw-semibold"></label>
                            <select asp-for="StudentID"
                                    asp-items="Model.StudentsList"
                                    class="form-control">
                                <option value="">-- Select Student --</option>
                            </select>
                            <span asp-validation-for="StudentID" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="ExamID" class="form-label fw-semibold"></label>
                            <select asp-for="ExamID"
                                    asp-items="Model.SubjectsList"
                                    class="form-control">
                                <option value="">-- Select Exam --</option>
                            </select>
                            <span asp-validation-for="ExamID" class="text-danger"></span>
                        </div>


                        <div class="mb-3">
                            <label asp-for="MarksObtained" class="form-label fw-semibold"></label>
                            <input asp-for="MarksObtained" class="form-control"/>
                            <span asp-validation-for="MarksObtained" class="text-danger"></span>
                        </div>

                        <!-- Grade -->
                        <div class="mb-4">
                            <label asp-for="Grade" class="form-label fw-semibold"></label>
                            <input asp-for="Grade" class="form-control"/>
                            <span asp-validation-for="Grade" class="text-danger"></span>
                        </div>

                        <div class="d-flex justify-content-between">
                            <a asp-action="Index" class="btn btn-outline-secondary">
                                Cancel
                            </a>
                            <button type="submit" class="btn btn-primary px-4">
                                Save Result
                            </button>
                        </div>

                    </form>

                </div>
            </div>

        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial"/>
}