@model IReadOnlyList<CourseViewModel>


@{
    ViewData["Title"] = "Courses";
}

<h2 class="mb-3">Courses</h2>

<div class="card shadow-sm">
    <div class="card-header">
        <h5>All Courses</h5>
    </div>

    <div class="card-body p-0">
        <table class="table table-bordered mb-0">
            <thead class="table-light">
            <tr>
                <th>#</th>
                <th>Course</th>
                <th>Code</th>
                <th>Duration</th>
                <th>Fees</th>
                <th>Created</th>
            </tr>
            </thead>
            <tbody>
            @{
                var count = 1;
            }

            @foreach (var course in Model)
            {
                <tr>
                    <td>@count</td>
                    <td>
                        <strong>@course.CourseName</strong>
                    </td>
                    <td>@course.CourseCode</td>
                    <td>
                        <span class="badge bg-info">
                            @course.DurationMonths Months
                        </span>
                    </td>
                    <td>₹@course.TotalFees</td>
                    <td>@course.CreatedAt.ToString("dd MMM yyyy")</td>
                </tr>

                <!-- Subjects Row -->
                <tr>
                    <td></td>
                    <td colspan="5">
                        <strong>Subjects:</strong>

                        @if (course.Subjects != null && course.Subjects.Any())
                        {
                            <ul class="mb-2">
                                @foreach (var subject in course.Subjects)
                                {
                                    <li>@subject</li>
                                }
                            </ul>
                        }
                        else
                        {
                            <span class="text-muted">No subjects added.</span>
                        }
                    </td>
                </tr>

                count++;
            }
            </tbody>
        </table>
    </div>
</div>