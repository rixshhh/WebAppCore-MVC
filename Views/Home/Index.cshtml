@model IEnumerable<ExamViewModel>

@{
    ViewData["Title"] = "Dashboard";
}

<h2 class="mb-4">Dashboard</h2>

<div class="row">

    <div class="col-md-3">
        <div class="card text-white bg-dark mb-3 shadow">
            <div class="card-body">
                <h5>Total Students</h5>
                <h3>@ViewBag.TotalStudents</h3>
            </div>
        </div>
    </div>

    <div class="col-md-3">
        <div class="card text-white bg-dark mb-3 shadow">
            <div class="card-body">
                <h5>Total Faculties</h5>
                <h3>@ViewBag.TotalFaculty</h3>
            </div>
        </div>
    </div>

    <div class="col-md-3">
        <div class="card text-white bg-dark mb-3 shadow">
            <div class="card-body">
                <h5>Total Courses</h5>
                <h3>@ViewBag.TotalCourses</h3>
            </div>
        </div>
    </div>

    <div class="col-md-3">
        <div class="card text-white bg-dark mb-3 shadow">
            <div class="card-body">
                <h5>Total Revenue</h5>
                <h3>@ViewBag.TotalRevenues</h3>
            </div>
        </div>
    </div>

</div>

<hr/>

<h4>Upcoming Exams</h4>

<div class="table-responsive">
    <table class="table table-bordered table-striped table-hover align-middle">
        <thead class="table-primary">
        <tr>
            <th>Subject ID</th>
            <th>Exam Type</th>
            <th>Exam Date</th>
            <th>Max Marks</th>
        </tr>
        </thead>
        <tbody>
        @if (Model != null && Model.Any())
        {
            foreach (var item in Model)
            {
                <tr>
                    <td>@item.SubjectName</td>
                    <td>@item.ExamType</td>
                    <td>@item.ExamDate.ToString("dd-MMM-yyyy")</td>
                    <td>@item.MaxMarks</td>

                </tr>
            }
        }
        else
        {
            <tr>
                <td colspan="6" class="no-data">No fee records found.</td>
            </tr>
        }
        </tbody>
    </table>
</div>